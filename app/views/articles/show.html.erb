<h2><%= @article.title %></h2>
<p><%= @article.content %></p>

<%= link_to "Back to Articles", articles_path  %>
<%= link_to  edit_article_path do  %>
<i class="fas fa-pencil-alt"></i>
<% end %>

<%= link_to  article_path(@article), method: :delete,  data: {confirm: "Delete #{@article.title?}"} do %>
<i class="fas fa-trash"></i>
<% end %>
